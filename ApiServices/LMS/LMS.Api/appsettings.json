{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgreSQL": "Server=localhost;Port=5432;Database=LMS;User Id=postgres;Password=1234;Pooling=true;"
  },
  "Serilog": {
    //"Using": [ "Serilog.Enrichers.Environment", "Serilog.Enrichers.Thread" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 50,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] ({Application}/{MachineName}/{ThreadId}/{ActionId}) {Message}{NewLine}{Exception} ",
          "fileSizeLimitBytes": 100000000
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Audit API"
    }
  }
}
